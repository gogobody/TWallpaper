<template name="ad">
  <view wx:if="{{setAD.posisionad[pagead]=='1'}}" class='banner-ad-c'>
    <ad unit-id="{{setAD.banner}}" wx:if="{{setAD.banner}}"></ad>
  </view>
  <view wx:elif="{{setAD.posisionad[pagead]=='2'}}" class='banner-ad-c'>
    <ad unit-id="{{setAD.videoid}}" wx:if="{{config.videoid}}" ad-type="video" ad-theme="white"></ad>
  </view>
  <view wx:elif="{{setAD.posisionad[pagead]=='3'}}" class='banner-ad-c'>
    <ad unit-id="{{setAD.gridid}}"  wx:if="{{setAD.gridid}}" ad-type="grid" grid-opacity="0.8" grid-count="5" ad-theme="white"></ad>
  </view>
  <view wx:elif="{{setAD.posisionad[pagead]=='4'}}"   style="width:96%;margin:auto">
    <ad-custom unit-id="{{setAD.customAid}}"  wx:if="{{setAD.customAid}}"></ad-custom>
  </view>
  <view wx:elif="{{setAD.posisionad[pagead]=='5'}}"  style="width:96%;margin:auto">
    <ad-custom unit-id="{{setAD.customBid}}"   wx:if="{{setAD.customBid}}"></ad-custom>
  </view>

</template>

