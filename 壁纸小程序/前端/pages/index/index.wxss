::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.tab-view::before {
    content: '';
    position: absolute;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    bottom: 0;
    right: 0;
    left: 0;
}

.tab-view {
    width: 100%;
    height: 100rpx;
    overflow: hidden;
    box-sizing: border-box;
    position: fixed;
    left: 0;
    z-index: 99;
    background: #333333;
    white-space: nowrap;
}

.tab-bar-item {
    padding: 0;
    height: 100rpx;
    min-width: 80rpx;
    line-height: 100rpx;
    margin: 0 28rpx;
